<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    style="@style/LayoutMargin">
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/linearLayout1"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        style="@style/LayoutMargin">
        <fragment
            class="com.example.android.wifip2p.fragment.DeviceListFragment"
            android:id="@+id/frag_list"
            android:layout_width="@dimen/phone_list_height"
            android:layout_height="match_parent">
            <!-- Preview: layouts=@layouts/row_devices -->
        </fragment>
        <fragment
            class="com.example.android.wifip2p.fragment.DeviceDetailFragment"
            android:id="@+id/frag_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <!-- Preview: layouts=@layouts/device_detail -->
        </fragment>
        <fragment
            android:id="@+id/frag_footer"
            class="com.example.android.mediasession.ui.fragment.FooterFragment"
            android:layout_width="match_parent"
            android:layout_height="100dp"/>
    </LinearLayout>
</LinearLayout>
